{
  "provider": "github",
  "template_type": "task",
  "action": "list_repos",
  "template_version": "1.0",
  "metadata": {
    "name": "List User Repositories",
    "description": "List repositories for the authenticated user",
    "api_reference": "https://docs.github.com/en/rest/repos/repos#list-repositories-for-the-authenticated-user",
    "requires_connection": "github_oauth2"
  },
  "config": {
    "name": "List GitHub Repositories",
    "api_endpoint": "https://api.github.com/user/repos",
    "method": "GET",
    "headers": {
      "Accept": ["application/vnd.github.v3+json"],
      "X-GitHub-Api-Version": ["2022-11-28"]
    },
    "query_params": {
      "type": ["owner"],
      "sort": ["updated"],
      "per_page": ["30"]
    }
  }
}