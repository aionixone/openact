{
  "provider": "github",
  "template_type": "connection",
  "template_version": "1.0",
  "metadata": {
    "name": "GitHub OAuth2 Connection",
    "description": "Standard GitHub OAuth2 authentication for API access",
    "documentation": "https://docs.github.com/en/developers/apps/building-oauth-apps",
    "required_secrets": ["github_client_id", "github_client_secret"]
  },
  "config": {
    "name": "GitHub API Connection",
    "authorization_type": "oauth2_authorization_code",
    "auth_parameters": {
      "oauth_parameters": {
        "token_url": "https://github.com/login/oauth/access_token",
        "scope": "user:email",
        "use_pkce": false
      }
    },
    "invocation_http_parameters": {
      "header_parameters": [
        {
          "key": "User-Agent",
          "value": "OpenAct/1.0"
        },
        {
          "key": "Accept",
          "value": "application/vnd.github.v3+json"
        },
        {
          "key": "X-GitHub-Api-Version",
          "value": "2022-11-28"
        }
      ]
    }
  }
}
